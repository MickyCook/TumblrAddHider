{
  "manifest_version": 2,

  "name": "Ad Hider",
  "description": "This extension will hide tumblr adds",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [
   {
      "matches":    ["https://www.tumblr.com/*"],
      "css":        ["styles.css"]
   }
],
  "permissions": [
   "activeTab"
   ]
}